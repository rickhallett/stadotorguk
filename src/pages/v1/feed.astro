        timestamp: "3 hours ago", 
        comment: "STATUTORY BREACH: Patient care compromised by unlawful road closure. Prepared to give expert testimony."
    },
    {
        id: 3,
        username: "Margaret P. (STATUTORY COMPLAINANT)",
        location: "North Swanage - BH19",
        timestamp: "5 hours ago",
        comment: "CONSTITUTIONAL VIOLATION: My right to consultation under Local Government Act 1972 was denied."
    },
    {
        id: 4,
        username: "Helen S. (EDUCATIONAL WITNESS)",
        location: "Durlston Road - BH19",
        timestamp: "8 hours ago",
        comment: "CHILD WELFARE BREACH: Children unable to reach school safely. This violates statutory safeguarding duties."
    },
    {
        id: 5,
        username: "David T. (BUSINESS CLAIMANT)",
        location: "High Street - BH19",
        timestamp: "12 hours ago",
        comment: "ECONOMIC HARM: £15,000 lost revenue due to unlawful consultation process. Seeking damages."
    },
    {
        id: 6,
        username: "ANONYMOUS WHISTLEBLOWER",
        location: "Council Offices - BH19",
        timestamp: "1 day ago",
        comment: "PROCEDURAL EVIDENCE: Internal documents show consultation was predetermined. Willing to provide protected disclosure."
    },
    {
        id: 7,
        username: "James R. (DISABLED RIGHTS)",
        location: "Institute Road - BH19",
        timestamp: "1 day ago",
        comment: "EQUALITY ACT BREACH: Disabled access routes eliminated without proper assessment. Clear discrimination case."
    },
    {
        id: 8,
        username: "Claire H. (PARISH WITNESS)",
        location: "Northbrook - BH19",
        timestamp: "2 days ago",
        comment: "STANDING ORDER ABUSE: Silenced under SO1c when presenting 1,200 petition signatures. Procedural impropriety documented."
    },
    {
        id: 9,
        username: "Robert L. (FORMER COUNCILLOR)",
        location: "Victoria Avenue - BH19",
        timestamp: "2 days ago",
        comment: "INSIDE KNOWLEDGE: 20 years council experience. This consultation process violated every democratic principle. Ready to testify."
    },
    {
        id: 10,
        username: "Amanda K. (LEGAL PROFESSIONAL)",
        location: "Queens Road - BH19",
        timestamp: "3 days ago",
        comment: "PROFESSIONAL OPINION: As a practicing solicitor, this consultation fails every legal test. Judicial review is our only remedy."
    }
];

// Use content collection items if available, otherwise use fallback
const displayItems = feedItems.length > 0 ? feedItems : fallbackItems;
---

<Layout title="Evidence Feed">
    <!-- HERO SECTION -->
    <section class="feed-hero">
        <h1 class="brutal-headline" style="font-size: clamp(3rem, 8vw, 6rem);">
            WITNESS<br/>TESTIMONIES
        </h1>
        <p class="brutal-subhead" style="font-size: clamp(1.2rem, 3vw, 2rem);">
            EVIDENCE FOR JUDICIAL REVIEW PROCEEDINGS
        </p>
    </section>

    <!-- USER COUNTER -->
    <BrutalSection title="THE LEGAL COALITION">
        <div class="countdown-alert">
            <div class="countdown-number" id="daysUntilVote">--</div>
            <div class="countdown-label">DAYS UNTIL JUDICIAL REVIEW DEADLINE</div>
        </div>
        <div class="user-counter">
            <div class="counter-block counter-total">
                <div class="data-stat">{activeUsers}</div>
                <div class="counter-label">Registered Complainants</div>
            </div>
            <div class="counter-block">
                <div class="data-stat">{todayUsers}</div>
                <div class="counter-label">New Witnesses Today</div>
            </div>
            <div class="counter-block">
                <div class="data-stat">{weekUsers}</div>
                <div class="counter-label">Statements This Week</div>
            </div>
            <div class="counter-block">
                <div class="data-stat">{monthUsers}</div>
                <div class="counter-label">Evidence Submitted</div>
            </div>
        </div>
    </BrutalSection>

    <!-- FEED -->
    <BrutalSection title="EVIDENCE REPOSITORY">
        <p style="margin-bottom: 2rem; font-size: 1.125rem;">
            Sworn testimonies and documented evidence supporting our case for judicial review. 
            Every statement recorded here strengthens our legal challenge against the council's 
            systematic violations of procedural law and constitutional rights.
        </p>
        <div class="feed-container">
            {displayItems.map((item) => (
                <div class="feed-item fade-in" data-id={item.id}>
                    <div class="feed-meta">
                        <span class="feed-user">{item.username} • {item.location}</span>
                        <span class="feed-time">{item.timestamp}</span>
                    </div>
                    <div class="feed-content">
                        "{item.comment}"
                    </div>
                    <div class="evidence-footer">
                        <span class="evidence-status">STATEMENT RECORDED</span>
                        <span class="case-ref">REF: STA-{String(item.id).padStart(4, '0')}</span>
                    </div>
                </div>
            ))}
        </div>
        
        <div class="load-more-container">
            <button class="submit-btn" id="loadMore">
                LOAD MORE EVIDENCE
            </button>
        </div>
    </BrutalSection>

    <!-- JOIN CTA -->
    <BrutalSection background="black">
        <h2 class="brutal-subhead" style="color: #FFD700; margin-bottom: 2rem;">
            SUBMIT YOUR EVIDENCE
        </h2>
        <p style="font-size: 1.25rem; margin-bottom: 2rem;">
            Your testimony is crucial evidence. Document violations. Support the legal challenge. 
            Protect your constitutional rights through proper legal channels.
        </p>
        <a href="/v1/" class="submit-btn" style="display: inline-block; text-decoration: none;">
            PROVIDE WITNESS STATEMENT
        </a>
    </BrutalSection>
</Layout>

<style>
    .feed-hero {
        background: var(--brutal-black);
        color: var(--brutal-white);
        padding: 6rem 2rem;
        text-align: center;
        border-bottom: 8px solid var(--brutal-gray); /* Green accent */
    }

    .feed-hero .brutal-headline {
        margin-bottom: 1rem;
    }

    .countdown-alert {
        background: var(--brutal-red);
        color: var(--brutal-white);
        padding: 2rem;
        margin-bottom: 2rem;
        border: 4px solid var(--brutal-black);
        box-shadow: 8px 8px 0 var(--brutal-shadow);
        text-align: center;
    }

    .countdown-number {
        font-family: 'Arial Black', sans-serif;
        font-size: 4rem;
        font-weight: 900;
        line-height: 1;
    }

    .countdown-label {
        font-size: 1.25rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-top: 0.5rem;
    }

    .counter-total {
        grid-column: 1 / -1;
        background: #FFD700 !important; /* Golden yellow for main counter */
        transform: scale(1.1);
        box-shadow: 0 10px 30px rgba(0, 102, 204, 0.3); /* Blue-tinted shadow */
    }

    .load-more-container {
        text-align: center;
        margin-top: 3rem;
    }

    .evidence-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 2px solid var(--brutal-black);
        margin-top: 1rem;
        font-size: 0.875rem;
        font-weight: 700;
    }

    .evidence-status {
        color: var(--brutal-red);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .case-ref {
        color: var(--brutal-gray);
        font-family: 'Courier New', monospace;
        background: var(--brutal-concrete);
        padding: 0.25rem 0.5rem;
        border: 1px solid var(--brutal-black);
    }

    /* Additional animations for feed items */
    .feed-item {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;
    }

    .feed-item:nth-child(1) { animation-delay: 0.1s; }
    .feed-item:nth-child(2) { animation-delay: 0.2s; }
    .feed-item:nth-child(3) { animation-delay: 0.3s; }
    .feed-item:nth-child(4) { animation-delay: 0.4s; }
    .feed-item:nth-child(5) { animation-delay: 0.5s; }
    .feed-item:nth-child(6) { animation-delay: 0.6s; }
    .feed-item:nth-child(7) { animation-delay: 0.7s; }
    .feed-item:nth-child(8) { animation-delay: 0.8s; }
    .feed-item:nth-child(9) { animation-delay: 0.9s; }
    .feed-item:nth-child(10) { animation-delay: 1.0s; }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .feed-hero {
            padding: 4rem 1rem;
        }
        
        .evidence-footer {
            flex-direction: column;
            gap: 0.5rem;
            align-items: flex-start;
        }
    }
</style>

<script>
    // Simulate loading more witness statements
    document.getElementById('loadMore')?.addEventListener('click', function() {
        const container = document.querySelector('.feed-container');
        const button = this as HTMLButtonElement;
        
        // Disable button temporarily
        button.disabled = true;
        button.textContent = 'LOADING EVIDENCE...';
        
        // Simulate API call
        setTimeout(() => {
            // Mock new legal testimonies
            const newItems = [
                {
                    username: "Patricia W. (CARE WORKER)",
                    location: "Victoria Avenue - BH19",
                    timestamp: "4 days ago",
                    comment: "DUTY OF CARE BREACH: Unable to reach elderly clients due to road closures. This violates safeguarding obligations."
                },
                {
                    username: "Michael K. (EMERGENCY RESPONDER)",
                    location: "Shore Road - BH19",
                    timestamp: "5 days ago",
                    comment: "STATUTORY FAILURE: Response times doubled. Council ignored emergency services consultation requirements under Section 6 of the Fire and Rescue Services Act."
                },
                {
                    username: "Jennifer L. (CONSTITUTIONAL LAWYER)",
                    location: "Kings Road - BH19",
                    timestamp: "6 days ago",
                    comment: "LEGAL PRECEDENT: This case mirrors R v Brent LBC ex parte Gunning (1985). Clear grounds for judicial review established."
                }
            ];
            
            // Add new items to feed
            newItems.forEach((item, index) => {
                const feedItem = document.createElement('div');
                feedItem.className = 'feed-item';
                feedItem.style.animationDelay = `${(index + 1) * 0.1}s`;
                const itemId = Date.now() + index;
                feedItem.innerHTML = `
                    <div class="feed-meta">
                        <span class="feed-user">${item.username} • ${item.location}</span>
                        <span class="feed-time">${item.timestamp}</span>
                    </div>
                    <div class="feed-content">
                        "${item.comment}"
                    </div>
                    <div class="evidence-footer">
                        <span class="evidence-status">STATEMENT RECORDED</span>
                        <span class="case-ref">REF: STA-${String(itemId).slice(-4)}</span>
                    </div>
                `;
                container?.appendChild(feedItem);
            });
            
            // Re-enable button
            button.disabled = false;
            button.textContent = 'LOAD MORE EVIDENCE';
        }, 1000);
    });

    // Counter animation
    function animateCounter(element: HTMLElement, target: number) {
        const duration = 2000;
        const start = 0;
        const increment = target / (duration / 16);
        let current = start;
        
        const timer = setInterval(() => {
            current += increment;
            if (current >= target) {
                element.textContent = target.toString();
                clearInterval(timer);
            } else {
                element.textContent = Math.floor(current).toString();
            }
        }, 16);
    }

    // Animate counters on page load
    window.addEventListener('DOMContentLoaded', () => {
        const counters = document.querySelectorAll('.counter-block .data-stat');
        counters.forEach((counter) => {
            const target = parseInt(counter.textContent || '0');
            animateCounter(counter as HTMLElement, target);
        });

        // Calculate days until judicial review deadline (120 days from September 15, 2024)
        const voteDate = new Date('2024-09-15');
        const reviewDeadline = new Date(voteDate.getTime() + (120 * 24 * 60 * 60 * 1000)); // Add 120 days
        const today = new Date();
        const timeDiff = reviewDeadline.getTime() - today.getTime();
        const daysUntil = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));
        
        const countdownElement = document.getElementById('daysUntilVote');
        if (countdownElement) {
            if (daysUntil > 0) {
                countdownElement.textContent = daysUntil.toString();
            } else {
                countdownElement.textContent = 'EXPIRED';
            }
        }
    });
</script>