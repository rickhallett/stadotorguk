const todayUsers = 42;
const weekUsers = 189;
const monthUsers = 567;

// Mock feed data
const feedItems = [
    {
        id: 1,
        username: "Sarah M.",
        location: "High Street",
        timestamp: "2 hours ago",
        comment: "Stuck in traffic for 45 minutes trying to get to the doctor's surgery. This is becoming unbearable."
    },
    {
        id: 2,
        username: "John D.",
        location: "Shore Road",
        timestamp: "3 hours ago",
        comment: "Emergency vehicles couldn't get through again today. When will the council listen to us?"
    },
    {
        id: 3,
        username: "Emma W.",
        location: "Town Centre",
        timestamp: "5 hours ago",
        comment: "My business has lost 30% of customers since the parking spaces were removed. We're struggling to survive."
    },
    {
        id: 4,
        username: "David R.",
        location: "Victoria Avenue",
        timestamp: "Yesterday",
        comment: "The pollution levels are getting worse every day. My children can't play outside anymore."
