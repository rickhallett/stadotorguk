        margin-top: 3rem;
    }

    .cta-button {
        display: inline-block;
        background: var(--brutal-black);
        color: var(--brutal-white);
        padding: 1rem 2rem;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border: 4px solid var(--brutal-black);
