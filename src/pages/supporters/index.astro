        color: var(--brutal-white);
        padding: 3rem 0;
    }

    .join-section h2 {
        color: var(--brutal-white);
    }

    .join-section p {
        font-size: 1.25rem;
        margin-bottom: 2rem;
    }

    .join-button {
        display: inline-block;
        background: var(--brutal-white);
        color: var(--brutal-red);
        padding: 1rem 3rem;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.05em;
