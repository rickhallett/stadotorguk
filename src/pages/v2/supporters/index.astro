    }

    .recent-name {
        font-weight: bold;
        font-size: 1.125rem;
    }

    .recent-meta {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .recent-type {
        background: var(--brutal-gray);
        color: var(--brutal-white);
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        font-weight: bold;
