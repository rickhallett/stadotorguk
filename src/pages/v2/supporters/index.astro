    { first_name: "Christopher", last_name: "Wilson", visitor_type: "Other", timestamp: "2024-08-16T15:30:00Z" },
    { first_name: "Jennifer", last_name: "Miller", visitor_type: "Local", timestamp: "2024-08-16T13:45:00Z" },
