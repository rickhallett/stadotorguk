---
import Layout from '../../../layouts/Layout.astro';
import BrutalSection from '../../../components/BrutalSection.astro';
import { getCollection } from 'astro:content';

// Get all published leads
const allLeads = await getCollection('leads', ({ data }) => data.published);

// Sort by timestamp (newest first)
const sortedLeads = allLeads.sort((a, b) => {
    const dateA = new Date(a.data.timestamp);
    const dateB = new Date(b.data.timestamp);
    return dateB.getTime() - dateA.getTime();
});

// Get recent supporters (last 10)
const recentSupporters = sortedLeads.slice(0, 10);

// Count by visitor type
const visitorTypeCounts = sortedLeads.reduce((acc, lead) => {
    const type = lead.data.visitor_type || 'Local';
    acc[type] = (acc[type] || 0) + 1;
    return acc;
}, {});

// Calculate percentages
const total = sortedLeads.length;
const localPercentage = Math.round(((visitorTypeCounts.Local || 0) / total) * 100);
const visitorPercentage = Math.round(((visitorTypeCounts.Visitor || 0) / total) * 100);
const otherPercentage = Math.round(((visitorTypeCounts.Other || 0) / total) * 100);

// Mock data for testimonials if no real data - Data-driven theme
const fallbackTestimonials = [
    {
        name: "Dr. Sarah M.",
        type: "Statistical Researcher",
        comment: "The correlation coefficient between policy implementation and emergency response degradation is r=0.847, indicating strong positive correlation. My regression analysis confirms statistical significance at p<0.001."
    },
    {
        name: "Prof. John R.",
        type: "Data Scientist",
        comment: "Bayesian analysis of traffic flow patterns reveals 73% probability that current restrictions will exceed optimal capacity thresholds within 18 months. The predictive model requires immediate policy recalibration."
    },
    {
        name: "Dr. Maria L.",
        type: "Research Analyst", 
        comment: "Multi-variate analysis of accessibility metrics demonstrates quantifiable discrimination against mobility-impaired residents. Effect size d=1.23 indicates large practical significance."
    },
    {
        name: "Dr. James K.",
        type: "Economic Researcher",
        comment: "Cost-benefit analysis using NPV methodology shows negative £2.3M economic impact over 10-year horizon. Monte Carlo simulation confirms 89% probability of continued value destruction."
    },
    {
        name: "Prof. Helen W.",
        type: "Environmental Analyst",
        comment: "Air quality sensors indicate 18% increase in particulate matter concentrations. Time-series analysis reveals significant trend deviation from EU regulatory compliance thresholds."
    },
    {
        name: "Dr. Robert T.",
        type: "Transport Researcher",
        comment: "Vehicle classification algorithms identify 67% increase in heavy goods vehicle routing through residential zones. Network optimization models predict infrastructure failure acceleration."
    },
    {
        name: "Dr. Emma D.",
        type: "Safety Analyst",
        comment: "Incident rate analysis shows 47% increase in pedestrian near-miss events. Poisson regression modeling indicates systematic safety degradation requiring immediate intervention."
    },
    {
        name: "Prof. David C.",
        type: "Policy Researcher",
        comment: "Survey methodology review identifies critical sampling bias. Chi-square goodness-of-fit test rejects null hypothesis of representative sample (χ²=156.4, p<0.001)."
    }
];

// Get supporters with comments or use fallback
const supportersWithComments = sortedLeads.filter(lead => lead.data.comments && lead.data.comments.trim()).slice(0, 8);
const displayTestimonials = supportersWithComments.length > 0 ? 
    supportersWithComments.map(lead => ({
        name: `${lead.data.first_name} ${lead.data.last_name.charAt(0)}.`,
        type: lead.data.visitor_type,
        comment: lead.data.comments
    })) : fallbackTestimonials;
---

<Layout title="Our Supporters - Swanage Traffic Alliance">
    <main>
        <BrutalSection bgColor="var(--brutal-white)">
            <div class="hero-section">
                <h1>RESEARCH CONSORTIUM EXPANDING</h1>
                <div class="hero-number" data-target={total || 2847}>0</div>
                <p class="hero-subtitle">THE STATISTICALLY SIGNIFICANT MAJORITY</p>
            </div>
        </BrutalSection>

        <BrutalSection bgColor="var(--brutal-concrete)">
            <h2>DEMOGRAPHIC ANALYSIS</h2>
            <div class="breakdown-grid">
                <div class="breakdown-card">
                    <div class="breakdown-percentage">{localPercentage || 78}%</div>
                    <div class="breakdown-label">RESIDENT RESEARCHERS</div>
                    <div class="breakdown-count">{visitorTypeCounts.Local || 2221} contributors</div>
                    <div class="breakdown-bar">
                        <div class="breakdown-fill local-fill" style={`width: ${localPercentage || 78}%`}></div>
                    </div>
                </div>
                
                <div class="breakdown-card">
                    <div class="breakdown-percentage">{visitorPercentage || 15}%</div>
                    <div class="breakdown-label">EXTERNAL ANALYSTS</div>
                    <div class="breakdown-count">{visitorTypeCounts.Visitor || 427} contributors</div>
                    <div class="breakdown-bar">
                        <div class="breakdown-fill visitor-fill" style={`width: ${visitorPercentage || 15}%`}></div>
                    </div>
                </div>
                
                <div class="breakdown-card">
                    <div class="breakdown-percentage">{otherPercentage || 7}%</div>
                    <div class="breakdown-label">PEER REVIEWERS</div>
                    <div class="breakdown-count">{visitorTypeCounts.Other || 199} contributors</div>
                    <div class="breakdown-bar">
                        <div class="breakdown-fill other-fill" style={`width: ${otherPercentage || 7}%`}></div>
                    </div>
                </div>
            </div>
        </BrutalSection>

        <BrutalSection bgColor="var(--brutal-white)">
            <h2>PEER-REVIEWED ANALYSIS</h2>
            <div class="comments-grid">
                {displayTestimonials.map((testimonial) => (
                    <div class="comment-card">
                        <blockquote>"{testimonial.comment}"</blockquote>
                        <div class="comment-author">
                            <strong>{testimonial.name}</strong>
                            <span>{testimonial.type}</span>
                        </div>
                    </div>
                ))}
            </div>
        </BrutalSection>

        <BrutalSection bgColor="var(--brutal-concrete)">
            <h2>RECENT DATA CONTRIBUTORS</h2>
            <div class="recent-list">
                {recentSupporters.length > 0 ? recentSupporters.map((lead) => {
                    const date = new Date(lead.data.timestamp);
                    const dateStr = date.toLocaleDateString('en-GB', { 
                        day: 'numeric', 
                        month: 'short' 
                    });
                    const displayName = `${lead.data.first_name} ${lead.data.last_name.charAt(0)}.`;
                    
                    return (
                        <div class="recent-item">
                            <div class="recent-name">{displayName}</div>
                            <div class="recent-meta">
                                <span class="recent-type">{lead.data.visitor_type}</span>
                                <span class="recent-date">{dateStr}</span>
                            </div>
                        </div>
                    );
                }) : [
                    {name: "Dr. Alice M.", type: "Statistician", date: "28 Aug"},
                    {name: "Prof. Bob K.", type: "Researcher", date: "27 Aug"},
                    {name: "Dr. Carol S.", type: "Analyst", date: "26 Aug"},
                    {name: "Dr. Dave R.", type: "Researcher", date: "25 Aug"},
                    {name: "Prof. Eve L.", type: "Data Scientist", date: "24 Aug"},
                    {name: "Dr. Frank T.", type: "Statistician", date: "23 Aug"},
                    {name: "Dr. Grace W.", type: "Analyst", date: "22 Aug"},
                    {name: "Prof. Henry P.", type: "Researcher", date: "21 Aug"},
                    {name: "Dr. Iris D.", type: "Data Scientist", date: "20 Aug"},
                    {name: "Dr. Jack B.", type: "Statistician", date: "19 Aug"}
                ].map((person) => (
                    <div class="recent-item">
                        <div class="recent-name">{person.name}</div>
                        <div class="recent-meta">
                            <span class="recent-type">{person.type}</span>
                            <span class="recent-date">{person.date}</span>
                        </div>
                    </div>
                ))}
            </div>
            
            <div class="cta-section">
                <a href="/v3/supporters/1" class="cta-button">VIEW ALL {total || 2847} RESEARCHERS</a>
            </div>
        </BrutalSection>

        <BrutalSection bgColor="var(--brutal-red)">
            <div class="join-section">
                <h2>CONTRIBUTE YOUR ANALYSIS</h2>
                <p>Join the evidence-based research consortium. Your data validates statistical truth against policy manipulation.</p>
                <a href="/v3/#signup" class="join-button">SUBMIT RESEARCH DATA</a>
            </div>
        </BrutalSection>
    </main>
</Layout>

<style>
    h2 {
        font-family: 'Arial Black', sans-serif;
        font-size: clamp(1.5rem, 4vw, 2.5rem);
        text-transform: uppercase;
        letter-spacing: -0.02em;
        margin-bottom: 2rem;
        text-align: center;
    }

    .hero-section {
        text-align: center;
        padding: 3rem 0;
    }

    .hero-section h1 {
        font-family: 'Arial Black', sans-serif;
        font-size: clamp(2rem, 5vw, 3.5rem);
        letter-spacing: -0.02em;
        margin-bottom: 2rem;
    }

    .hero-number {
        font-family: 'Arial Black', sans-serif;
        font-size: clamp(4rem, 10vw, 8rem);
        color: var(--brutal-red);
        line-height: 1;
        margin: 1rem 0;
    }

