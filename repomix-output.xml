        }

        .form-confirmation {
            display: none;
            background: var(--brutal-black);
            color: var(--brutal-white);
            padding: 2rem;
            text-align: center;
            font-weight: 900;
            font-size: 1.5rem;
            text-transform: uppercase;
            margin-top: 2rem;
        }

