            }

            .timeline::before {
                left: 40px;
            }

            .timeline-item {
                width: calc(100% - 80px);
                margin-left: 80px !important;
                text-align: left !important;
            }

            .timeline-marker {
                left: -60px !important;
            }

            .impact-grid {
